# Que - https://www.codechef.com/problems/STRP?tab=statement

T = int(input())

for i in range(T):
    N = int(input())
    S = input()
    
    count = 0
    i = 0
    
    while(i < len(S)-1):
 
        if(S[i] == S[i+1]):
            count+=1
            i+=2
      
        else:
            i+=1
    print(N - count)
        

            
